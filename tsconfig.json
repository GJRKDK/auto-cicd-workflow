{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "types": ["react", "react-dom", "@types/react", "@types/react-dom", "@types/node"],
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react"
  },
  "include": ["src", "setupTests.ts"]
}